    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 타이틀바 -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Grid.ColumnSpan="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 타이틀 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="16,0,0,0">
                    <TextBlock Text="국가기본도 DB 검수 프로그램" 
                              VerticalAlignment="Center" 
                              FontWeight="SemiBold" 
                              FontSize="16"/>
                    <Border Background="#3B82F6" 
                           CornerRadius="10" 
                           Padding="6,2" 
                           Margin="8,0,0,0">
                        <TextBlock x:Name="VersionText" Text="v2.5" 
                                  Foreground="White" 
                                  FontSize="12" 
                                  FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                
                <!-- 회사 로고 (오른쪽에 표시) -->
                <Image Grid.Column="2" 
                       Source="{StaticResource CompanyLogo}" 
                       Height="32" 
                       Margin="0,0,16,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        <Border Grid.Column="0" Background="{StaticResource SidebarColor}" BorderBrush="#1A2633" BorderThickness="0,0,1,0" Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel Margin="0,12,0,0">
                <Button x:Name="FileSelectionNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToFileSelection">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource FolderIcon}" Fill="{StaticResource SidebarIconFolder}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="폴더 선택" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" TextAlignment="Center" FontFamily="KoPubDotum Medium" />
                    </StackPanel>
                </Button>
                <Button x:Name="ValidationNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToValidation">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource PlayIcon}" Fill="{StaticResource SidebarIconPlay}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="검수 진행" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" TextAlignment="Center" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ResultsNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToResults">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource ChartIcon}" Fill="{StaticResource SidebarIconChart}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="검수 결과" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SettingsNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="ValidationSettings_Click">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource SettingsIcon}" Fill="{StaticResource SidebarIconSettings}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="검수 환경 설정" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ReportsNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToReports">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource ReportIcon}" Fill="{StaticResource SidebarIconReport}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="보고서" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ShpConvertNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToShpConvert">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource ExportIcon}" Fill="{StaticResource SidebarIconExport}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="SHP 변환" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="CoordTransformNavButton"
                           Style="{StaticResource SidebarButton}"
                           HorizontalContentAlignment="Center"
                           Click="NavigateToCoordTransform">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Path Data="{StaticResource TransformIcon}" Fill="{StaticResource SidebarIconTransform}" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                        <TextBlock Text="좌표 변환" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontFamily="KoPubDotum Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Grid Margin="107,45,98,20" Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- 메인 컨텐츠 영역 -->
            <ContentControl x:Name="MainContentContainer" Margin="0,0,0,0">
                <!-- 기본 환영 화면 -->
                <local:WelcomeView x:Name="WelcomeView"/>
            </ContentControl>
        </Grid>

        <!-- 메인 레이아웃 -->

        <!-- 하단 상태바 -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
               Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" 
               Height="30" VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Path Data="{StaticResource InfoIcon}" 
                          Fill="#10B981" 
                          Width="14" Height="14" 
                          Stretch="Uniform" 
                          Margin="0,0,6,0"/>
                    <TextBlock x:Name="SystemStatusText" 
                              Text="준비 완료" 
                              VerticalAlignment="Center" 
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Path Data="{StaticResource TimeIcon}" 
                          Fill="#6B7280" 
                          Width="14" Height="14" 
                          Stretch="Uniform" 
                          Margin="0,0,6,0"/>
                    <TextBlock x:Name="TimeText" 
                              VerticalAlignment="Center" 
                              FontSize="12" 
                              Foreground="#6B7280"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
