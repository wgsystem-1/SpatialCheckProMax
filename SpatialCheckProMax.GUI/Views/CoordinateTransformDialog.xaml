<Window x:Class="SpatialCheckProMax.GUI.Views.CoordinateTransformDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="좌표 변환" 
        Height="520" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BrowseButton" TargetType="Button">
            <Setter Property="Background" Value="#64748B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 타이틀 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="좌표 변환" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#0F172A"/>
            <TextBlock Text="FileGDB 또는 Shapefile의 좌표계를 변환합니다." 
                       FontSize="13" 
                       Foreground="#64748B" 
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 입력 파일 선택 -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="입력 파일/폴더 (FileGDB 또는 SHP)" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#334155" 
                       Margin="0,0,0,6"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SourcePathTextBox" 
                         Grid.Column="0" 
                         Height="36" 
                         Padding="10,8" 
                         FontSize="13"
                         BorderBrush="#CBD5E1"
                         BorderThickness="1"
                         IsReadOnly="True"
                         Background="White"/>
                <Button Grid.Column="1" 
                        Content="찾아보기..." 
                        Style="{StaticResource BrowseButton}" 
                        Margin="8,0,0,0"
                        Click="BrowseSource_Click"/>
            </Grid>
        </Grid>

        <!-- 좌표계 정보 -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 소스 좌표계 (자동 감지) -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="소스 좌표계 (자동 감지)" 
                           FontSize="13" 
                           FontWeight="SemiBold" 
                           Foreground="#334155" 
                           Margin="0,0,0,6"/>
                <Border Background="#F1F5F9" 
                        BorderBrush="#CBD5E1" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="10,8">
                    <TextBlock x:Name="SourceCrsText" 
                               Text="파일을 선택하세요" 
                               FontSize="13" 
                               Foreground="#64748B"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
            
            <!-- 화살표 -->
            <TextBlock Grid.Column="1" 
                       Text="→" 
                       FontSize="20" 
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="#64748B"/>
            
            <!-- 대상 좌표계 -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="대상 좌표계" 
                           FontSize="13" 
                           FontWeight="SemiBold" 
                           Foreground="#334155" 
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="TargetCrsComboBox" 
                          Height="36" 
                          FontSize="13"
                          SelectedIndex="0"
                          SelectionChanged="TargetCrs_SelectionChanged">
                    <ComboBoxItem Content="EPSG:5179 - Korea 2000 / UTM-K" Tag="5179"/>
                    <ComboBoxItem Content="EPSG:5186 - 중부원점 (Central Belt)" Tag="5186"/>
                    <ComboBoxItem Content="EPSG:5185 - 서부원점 (West Belt)" Tag="5185"/>
                    <ComboBoxItem Content="EPSG:5187 - 동부원점 (East Belt)" Tag="5187"/>
                    <ComboBoxItem Content="EPSG:5188 - 동해원점 (East Sea Belt)" Tag="5188"/>
                    <ComboBoxItem Content="EPSG:4326 - WGS 84 (경위도)" Tag="4326"/>
                    <ComboBoxItem Content="EPSG:3857 - Web Mercator" Tag="3857"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- 출력 포맷 -->
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="출력 포맷" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#334155" 
                       Margin="0,0,0,6"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <RadioButton x:Name="OutputFormatGdb" 
                             Content="FileGDB" 
                             IsChecked="True" 
                             Margin="0,0,20,0"
                             FontSize="13"
                             Checked="OutputFormat_Changed"/>
                <RadioButton x:Name="OutputFormatShp" 
                             Content="Shapefile" 
                             FontSize="13"
                             Checked="OutputFormat_Changed"/>
            </StackPanel>
        </Grid>

        <!-- 출력 경로 -->
        <Grid Grid.Row="4" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="출력 경로" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#334155" 
                       Margin="0,0,0,6"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="OutputPathTextBox" 
                         Grid.Column="0" 
                         Height="36" 
                         Padding="10,8" 
                         FontSize="13"
                         BorderBrush="#CBD5E1"
                         BorderThickness="1"
                         IsReadOnly="True"
                         Background="White"/>
                <Button Grid.Column="1" 
                        Content="찾아보기..." 
                        Style="{StaticResource BrowseButton}" 
                        Margin="8,0,0,0"
                        Click="BrowseOutput_Click"/>
            </Grid>
        </Grid>

        <!-- 진행률 -->
        <Grid Grid.Row="5" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="진행 상태: " 
                           FontSize="13" 
                           FontWeight="SemiBold" 
                           Foreground="#334155"/>
                <TextBlock x:Name="StatusText" 
                           Text="대기 중" 
                           FontSize="13" 
                           Foreground="#64748B"/>
            </StackPanel>
            <ProgressBar x:Name="TransformProgressBar" 
                         Grid.Row="1" 
                         Height="8" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="0"
                         Foreground="#2563EB"
                         Background="#E2E8F0"/>
        </Grid>

        <!-- 레이어 정보 -->
        <Border Grid.Row="6" 
                Background="#F1F5F9" 
                CornerRadius="6" 
                Padding="12" 
                Margin="0,0,0,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="80">
                <TextBlock x:Name="LayerInfoText" 
                           Text="입력 파일을 선택하면 레이어 정보가 표시됩니다." 
                           FontSize="12" 
                           Foreground="#64748B"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- 버튼 -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,8">
            <Button x:Name="TransformButton" 
                    Content="변환 실행" 
                    Style="{StaticResource PrimaryButton}" 
                    Width="120"
                    Height="40"
                    IsEnabled="False"
                    Click="Transform_Click"/>
            <Button Content="닫기" 
                    Style="{StaticResource SecondaryButton}" 
                    Width="100"
                    Height="40"
                    Margin="12,0,0,0"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>



